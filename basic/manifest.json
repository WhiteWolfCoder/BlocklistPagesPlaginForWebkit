{
   "background": {
      "scripts": [ "js/bg.js" ]
   },
   "browser_action": {
      "default_icon": "48.png",
      "default_popup": "bl.html"
   },
   "content_scripts": [ {
      "js": [ "js/bg.js" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_start"
   } ],
   "description": "Блок-лист это список сайтов выбранный вами, которые больше не откроются в вашем браузере.",
   "icons": {
      "128": "128.png",
      "16": "16.png",
      "48": "48.png"
   },
   "manifest_version": 2,
   "name": "Блок-лист",
   "options_page": "options.html",
   "permissions": [ "*://*/*", "tabs", "storage", "webRequest", "webRequestBlocking", "activeTab" ],
 "version": "1.9",
   "web_accessible_resources": [ "block.html" ]
}
